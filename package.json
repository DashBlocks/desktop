{
  "name": "dash-desktop",
  "version": "1.1.0",
  "main": "main.js",
  "description": "Dash as a desktop app",
  "author": "Dash Team",
  "scripts": {
    "start": "electron .",
    "update": "bash update.sh",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux",
    "build:win": "electron-builder --windows",
    "build:mac": "electron-builder --mac"
  },
  "build": {
    "appId": "com.dashblocks.desktop",
    "productName": "Dash Desktop",
    "files": [
      "main.js",
      "preload.js",
      "source/**/*",
      "package.json",
      "assets/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "DashBlocks",
      "repo": "desktop"
    },
    "icon": "assets/icons/icon.png",
    "linux": {
      "icon": "assets/icons/icon.png",
      "target": [
        "AppImage"
      ],
      "category": "Development"
    },
    "win": {
      "icon": "assets/icons/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "icon": "assets/icons/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    }
  },
  "devDependencies": {
    "electron": "^39.2.6",
    "electron-builder": "^25.0.0"
  }
}
